{
    "env": {
        "browser": false,
        "node": true,
        "mocha": true,
        "commonjs": true,
        "es6": true
    },
    "globals": {
        "getBlockNodes": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error", 2, {
                "SwitchCase": 1
            }
        ],
        "linebreak-style": [
            "error", "unix"
        ],
        "no-console": 0,
        "no-unused-vars": [
            "error", {
                "argsIgnorePattern": "^_",
                "varsIgnorePattern": "^_"
            }
        ],
        "object-curly-spacing": [
            "error", "always"
        ],
        "quotes": [
            "error", "single", {
                "avoidEscape": true
            }
        ],
        "semi": [
            "error", "always"
        ],
        "space-before-blocks": [
            "error", "always"
        ]
    }
}
